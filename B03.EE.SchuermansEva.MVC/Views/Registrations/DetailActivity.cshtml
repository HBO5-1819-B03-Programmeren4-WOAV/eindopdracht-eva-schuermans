@using B03.EE.SchuermansEva.Lib.Models;
@model B03.EE.SchuermansEva.MVC.Models.RegistrationIndexViewModel;

<h2>Detail @Model.Activity.Title</h2>

<h3>Description</h3>
<p>@Model.Activity.Description</p>

<h3>Participants</h3>
<div>
    <ul class="list-group">     
        @foreach (User user in Model.Participants)
        {                 
            <li class="list-group-item">@user.LastName @user.FirstName</li>   
        }                                      
    </ul>      
    <a class="btn btn-default" asp-action="Index">Back</a>   
