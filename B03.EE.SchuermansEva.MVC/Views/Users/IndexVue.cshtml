
@{
    ViewData["Title"] = "Users";
}

<h2>@ViewBag.Title</h2>

<article id="app" class="row">
    <header class="col-md-4">
        <h3>  {{ message }}  </h3>
        <nav>
            <ul class="list-group">
                <li v-for="user in users" v-on:click="fetchUserDetails(user)" :class="getUserClass(user)" style="cursor:pointer">
                    <span class="glyphicon glyphicon-user"></span><span> {{ user.name }} </span>
                </li>
            </ul>
        </nav>
    </header>
    <div v-if="currentUser" class="col-md-4">
        <h3>Details</h3>
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-4 control-label small">Firstname</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" v-model="currentUser.firstName" :readonly="isReadOnly">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label small">Lastname</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" v-model="currentUser.lastName" :readonly="isReadOnly">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label small">Birthday</label>
                <div class="col-sm-8">
                    <input type="datetime" class="form-control" v-model="currenUser.birthDay" :readonly="isReadOnly">
                </div>
            </div>
            <button v-on:click="toEditMode(false)" v-if="isReadOnly" class="btn btn-warning">New</button>
            <button v-on:click="toEditMode(true)" v-if="isReadOnly" class="btn btn-primary">Edit</button>
            <button v-on:click="deleteUser()" v-if="isReadOnly" class="btn btn-danger">Delete</button>
            <button v-on:click="save" v-if="!isReadOnly" class="btn btn-primary">Save</button>
            <button v-on:click="cancel" v-if="!isReadOnly" class="btn btn-default">Cancel</button>
        </div>
    </div>
</article>


@section scripts{
    <script src="~/js/vue.js"></script>
    <script src="~/js/users.js"></script>
}



